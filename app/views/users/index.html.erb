<div class="container container-body content-container">
  <div class="row">
    <h3>Users</h3>

    <%= form_tag("/members", method: "get") do %>
      <%= label_tag(:q, "Поиск по имени:") %>
      <%= text_field_tag(:q) %>
      <%= submit_tag("Искать") %>
    <% end %>

    <div class="column">
      <table class="table">
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <%= render user %>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @users, params: {controller: 'users', action: 'index'} %>
  </div>
</div>