<%- content_for :title do %>
  Я участвую в конкурсе красоты Мисс Туризм 2017!
<%- end %>
<%- content_for :description do %>
  Голосуйте за меня!
<%- end %>

<% if user_signed_in? && policy(@user).edit? %>
  <%= render partial: "shared/meta_og",
             locals: {title: "Я участвую в конкурсе красоты Мисс Туризм 2017!",
                      desc: "Голосуйте за меня!",
                      photo: @root_photo ? @root_photo.photo_src.large : nil
             }
  %>
<%- else %>
  <%= render partial: "shared/meta_og",
             locals: {title: "Посмотрите какая девушка!",
                      desc: "#{@user.name} участвует в конкурсе красоты Мисс Туризм 2017! Проголосуйте за нее!",
                      photo: @root_photo ? @root_photo.photo_src.large : nil
             }
  %>
<% end %>


<div class="profile">
  <div class="container content-container">

    <div class="profile-heding">
      <div>
        АНКЕТА УЧАСТНИЦЫ № <%= @user.number %>
      </div>
      <div>
        Конкурс Мисс Туризм 2017
      </div>
    </div>

    <div class="profile-container">
      <div class="profile-photos-col">
        <%== render 'users/photos' %>
      </div>
      <div class="profile-info-col">

        <div class="votes-block">

          <div class="votes-block-pager">
            <%- if @user_prev %>
              <%== link_to user_path(@user_prev), class: 'btn btn-default' do %>
                <i class="fa fa-chevron-left" aria-hidden="true"></i>
                &nbsp;
                Предыдущая
              <% end %>
            <% end %>

            <%- if @user_next %>
              <%== link_to user_path(@user_next), class: 'btn btn-default' do %>
                Следующая
                &nbsp;
                <i class="fa fa-chevron-right" aria-hidden="true"></i>
              <% end %>
            <% end %>
          </div>


          <% if user_signed_in? && VotesQuery.new.is_votes(current_user, @user.number) %>
            <div class="vote-btn-container text-center">
              <%= link_to voteable_path(@user),
                          class: 'vote-btn',
                          remote: true do %>
                Проголосовать за участницу
                <%= image_tag asset_pack_path 'icon-like-red.svg' %>
              <% end %>
            </div>
          <% else %>
            <div class="vote-btn-container text-center">
              <%= render partial: "users/votes_btn" %>
            </div>
          <% end %>
        </div>


        <%== render 'users/userinfo' %>
      </div>
    </div>

    <div class="profile-social">
      <div class="profile-social-title">
        Поделитесь с друзьями
      </div>
      <div class="b-sign-in-buttons">
        <a href="#" class="b-sign-in-button b-sign-in-button-fb btn-shared_fb">
          <%= image_tag asset_pack_path 'login-fb.svg' %>
        </a>
        <a href="#" class="b-sign-in-button b-sign-in-button-vk">
          <i class="fa fa-vk fa-fw"></i>
          <span>VKONTAKTE</span>
        </a>
      </div>
    </div>

  </div>
</div>