<div class="container content-container" style="padding: 20px 20px 100px">
  <h1 style="margin-bottom: 50px" class="text-center">
    Голосуй за Мисс Туризм!
  </h1>
  <div class="row">
    <%- @users.each do |user| %>
      <%- root_photo = user.photos.present? ? user.photos.find_by(root: true) : nil %>
      <div class="col-md-4">
        <%= render partial: "shared/anketa_mini",
                   locals: {user: user,
                            photo: root_photo,
                   }
        %>
      </div>
    <% end %>
  </div>
  <%= paginate @users %>
</div>
