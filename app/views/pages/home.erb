            <%= link_to user_path(@user1), class: "anketa-item" do %>
              <div class="anketa-item-img">
                <img class="img-responsive owl-lazy" data-src="<%= photo.photo_src.large %>" />
              </div>
              <div class="anketa-item-name">
                <%= @user1.name %>,
                <%= @user1.age %>
              </div>
              <div class="anketa-item-organization">
                <%= @user1.organization %>
